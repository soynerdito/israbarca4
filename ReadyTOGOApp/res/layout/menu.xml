<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/newpic1">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_x="0dp"
        android:layout_y="0dip">

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="\t\t\t\t\t  Menu"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_x="0dp"
        android:layout_y="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/Button01"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/homebutton"
            android:paddingBottom="10dp"></Button>

        <Button
            android:id="@+id/Button02"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/menubutton"
            android:paddingBottom="10dp"></Button>

        <Button
            android:id="@+id/Button03"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/view_orderbutton"
            android:paddingBottom="10dp"></Button>

        <Button
            android:id="@+id/Button05"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/call_waiterbutton"
            android:paddingBottom="10dp"></Button>

        <Button
            android:id="@+id/Button04"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/helpbutton"
            android:paddingBottom="10dp"></Button>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_x="80dp"
        android:layout_y="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LinearLayout04"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_x="80dp"
            android:layout_y="50dp"
            android:gravity="center_horizontal"
            android:paddingLeft="30dp">

            <Button
                android:id="@+id/Button06"
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/appetizers"
                android:paddingLeft="20dp"
                android:textColorHighlight="#0000FF"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/Button07"
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/beverages"
                android:paddingLeft="20dp"
                android:textColorHighlight="#0000FF"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/Button08"
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/soups"
                android:paddingLeft="20dp"
                android:textColorHighlight="#0000FF"
                android:textStyle="bold"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout05"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_x="80dp"
            android:layout_y="180dp"
            android:gravity="center_horizontal"
            android:paddingLeft="30dp">

            <Button
                android:id="@+id/Button09"
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_marginBottom="80dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/maincourse"
                android:textColorHighlight="#0000FF"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/Button10"
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_salads"
                android:textColorHighlight="#0000FF"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/Button11"
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/dessert"
                android:textColorHighlight="#0000FF"
                android:textStyle="bold"></Button>

        </LinearLayout>

    </LinearLayout>
</AbsoluteLayout>
